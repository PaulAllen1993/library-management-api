{
  "name": "library-api",
  "version": "0.4.1",
  "description": "Library API",
  "main": "index.js",
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "preset": "angular",
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      }
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false,
      "push": true,
      "pushArgs": "--follow-tags"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PaulAllen1993/library-management-api.git"
  },
  "author": "Paul Allen",
  "license": "ISC",
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.5",
    "release-it": "^19.2.4"
  }
}
